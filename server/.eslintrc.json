{
    "env": {
        "commonjs": true,
        "es6": true,
        "node": true,
        "jest": true
    },
    "extends": [
        "prettier",
        "airbnb-base"
    ],
    "plugins": [
      "prettier"
    ],
    "parser": "esprima",
    "parserOptions": {
        "ecmaVersion": 6
    },
    "rules": {
      "prettier/prettier": "error",
      "no-console": "off",
      "func-names": "off",
      "implicit-arrow-linebreak": "off",
      "function-paren-newline": "off",
      "no-underscore-dangle": [2, {"allow": ["_id", "__MONGO_URI__"]}],
      "no-param-reassign": "off",
      "consistent-return": "off",
      "no-plusplus": "off",
      "operator-linebreak": "off"
    }
}
